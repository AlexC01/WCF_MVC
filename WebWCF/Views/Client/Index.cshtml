@model IEnumerable<WebWCF.ServiceReference1.Clientes_Result4>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Crear Cliente", "Insert", "Client", null, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Email
        </th>
        <th>
            Telefono
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.phone)
    </td>

    <td>
        @Html.ActionLink("Eliminar", "Delete", "Client", new { IdClient = @item.client_id }, new { @class = "btn btn-danger", @onclick = "eliminar()" })
    </td>
</tr>
}

</table>
